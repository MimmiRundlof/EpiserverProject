@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@model MimmiProject.Models.ViewModels.GoogleMapViewModel
<!DOCTYPE html>
<html>
<head>
    <style>
        /* Set the size of the div element that contains the map */
        #map {
            height: 400px; /* The height is 400 pixels */
            width: 100%; /* The width is the width of the web page */
        }
    </style>
</head>
<body>

    <div id="map"></div>
    <div class="blankSeparator1"></div>
    <hr class="separator1">


    <script>
        function initMap() {
            var uluru = { lat: @Model.Latitude.ToString(), lng: @Model.Longitude.ToString() };
            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 15, center: uluru });
            var marker = new google.maps.Marker({ position: uluru, map: map });
        }
    </script>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrLel8frW_jt73by_FsVEeC7pbu9Rcpxo&callback=initMap">
    </script>
</body>
</html>